{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://niko.achilles/schemas/defs.json",
  "title": "Definitions",
  "definitions": {
    "positiveInteger": {
      "$id": "#positiveInteger",
      "type": "integer",
      "minimum": 1
    },
    "color": {
      "$id": "#color",
      "anyOf": [
        { "enum": ["red", "green", "blue", "white"] },
        { "type": "string", "pattern": "^#(?:(?:[0-9a-fA-F]{1,2})){3}$" }
      ]
    }
  }
}
