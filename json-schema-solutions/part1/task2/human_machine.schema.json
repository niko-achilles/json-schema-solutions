{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$comment": "Task 2: Validates humans and machines",
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "human": {
          "type": "boolean",
          "const": true
        },
        "gender": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "DOB": {
          "type": "string",
          "format": "date"
        }
      },
      "required": ["human"],
      "additionalProperties": false,
      "dependencies": {
        "human": ["name", "gender", "DOB"]
      }
    },
    {
      "type": "object",
      "properties": {
        "model": {
          "type": "string"
        },
        "made": {
          "type": "string",
          "format": "date"
        }
      },
      "required": ["model"],
      "additionalProperties": false,
      "dependencies": {
        "model": ["made"]
      }
    }
  ]
}
